#!/usr/bin/env lish
(load "lib/test.lish" true)

(puts "Running tests.")

(def @test_names {
  "table"
  "string"
})

(def @load_test (lambda {name} {
  (puts (concat "  - testing " name))
  (load (concat (concat "test/" name) ".lish"))
}))

(map test_names (lambda {name} {
  (if (load_test name)
    { } # all good!
    { exit 1 }
  )
}))

(puts "Done!")
